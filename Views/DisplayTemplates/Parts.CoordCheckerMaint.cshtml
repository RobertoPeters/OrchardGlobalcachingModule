<form role="form">
    <div class="form-group">
        <label class="control-label">Code/Waypoint:</label>
        <select class="form-control" id="code">
        </select>
    </div>
    <div class="form-group">
        <label class="control-label">Code:</label>
        <input type="text" class="form-control" id="editcoord" value="" placeholder="GC12345" />
    </div>
    <div class="form-group">
        <label class="control-label">Coordinaat:</label>
        <input type="text" class="form-control" id="coord" value="" placeholder="N51 5.123 E6 5.321" />
    </div>
    <div class="form-group">
        <label class="control-label">Accepteer binnen radius: (0=exacte coord vereist)</label>
        <input type="text" class="form-control" id="radius" value="0" />
    </div>
    <div class="form-group">
        <label class="control-label">Notificatie bij foute invoer:</label>
        <input type="checkbox" class="form-control" id="notiwrong" />
    </div>
    <div class="form-group">
        <label class="control-label">Notificatie bij juiste invoer:</label>
        <input type="checkbox" class="form-control" id="noticorrect" />
    </div>

    <button class="btn btn-primary col-md-2" type="button" id="updateButton">Opslaan/Aanmaken</button>
    <button class="btn btn-primary col-md-2" type="button" id="deleteButton">Verwijderen</button>
</form>

<div id="searchFavoritesTopPager">
</div>
<table class="table table-striped table-hover" id="searchFavoritesResults">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Bezoekers ID</th>
            <th>Coordinaat</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div id="searchFavoritesBottomPager">
</div>

<script type="text/javascript">
    var ignoreSelection = false;

    initGlobalcachingPager("searchFavoritesTopPager", "favoritesPager");
    initGlobalcachingPager("searchFavoritesBottomPager", "favoritesPager");

    function htmlEncode(value) {
        return $('<div/>').text(value).html();
    }

    function updateAttemptsList(response) {
        var resultElementName = "#searchFavoritesResults";
        var pagerElementName = ".favoritesPager";

        for (var i = 0; i < response.Attempts.length; i++) {
            var line = response.Attempts[i];
            // insert after last row!
            var td1 = "";
            var td2 = "";
            var td3 = "";

            $(resultElementName + ' > tbody:last').append('<tr><td>' + td1 + '</td><td>' + td2 + '</td><td>' + td3 + '</td></tr>');
        }

        setupGlobalcachingPage(response.CurrentPage, response.PageCount, response.TotalCount, pagerElementName, "requestFavoritesPage");
    }

    function requestAttemptsPage(page) {
        var resultElementName = "#searchFavoritesResults";
        var pagerElementName = ".favoritesPager";

        myApp.showPleaseWait();

        $(resultElementName).find("tr:gt(0)").remove();
        $(pagerElementName).find("li").remove();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetFavoriteGeocachers", "FavoriteGeocachers", new { area = "Globalcaching" })',
            data: {
                page: page,
                pageSize: "50",
                code: $("#code").val(),
                __RequestVerificationToken: '@Html.AntiForgeryTokenValueOrchard()'
            },
            success: function (response) {
                myApp.hidePleaseWait();
                updateAttemptsList(response);
            },
            error: function (data, errorText) {
                myApp.hidePleaseWait();
                alert(errorText);
            }
        });
    }

    function updateAllPage(response) {
        ignoreSelection = true;
        updateAttemptsList(response.AttemptInfo);
        ignoreSelection = false;
    }

    $("#updateButton").click(function () {
        //
    });
    $("#deleteButton").click(function () {
        //
    });

    updateAllPage(@Html.Raw(Json.Encode(@Model)));
</script>