<style>
    .featuretile {
        background: #ffffff; /* Old browsers */
        border: 1px solid silver;
        box-shadow: 3px 3px 5px #535353;
        border-radius: 5px;
        margin: 15px 7px;
        padding: 17px 12px 0px;
        overflow-x: auto;
        height: 150px;
        cursor: pointer;
        position: relative;
        display: table-cell;
        width: 150px;
        text-align: center;
        align-content:center;
    }
    .featureimage {
        width: 80px;
        height: 80px;
        vertical-align: top;
        
    }
    .featurecaption {
        color: black;
    }
</style>

<div class="row hidden-xs">
    <div id="featureccc" class="col-md-2 featuretile" style="margin-left: 25px">
        <img class="featureimage" src="@Href("~/Modules/Globalcaching/Media/ccc.png")" /><br /><br />
        <span class="featurecaption"><small>Cache, Call &amp; Catch</small></span>
    </div>

    <div id="featuredonation" class="col-md-2 featuretile">
        <img class="featureimage" src="@Href("~/Modules/Globalcaching/Media/eurosign256.png")" /><br /><br />
        <span class="featurecaption"><small>Donaties</small></span>
    </div>

    <div id="featuresearch" class="col-md-2 featuretile">
        <img class="featureimage" src="@Href("~/Modules/Globalcaching/Media/Search-icon.png")" /><br /><br />
        <span class="featurecaption"><small>Uitgebreid zoeken</small></span>
    </div>

    <div id="featureftf" class="col-md-2 featuretile">
        <img class="featureimage" src="@Href("~/Modules/Globalcaching/Media/medal.png")" /><br /><br />
        <span class="featurecaption"><small>FTF ranglijst</small></span>
    </div>

    <div id="featureselectiebewerker" class="col-md-2 featuretile">
        <img class="featureimage" src="@Href("~/Modules/Globalcaching/Media/selectiebewerker.png")" /><br /><br />
        <span class="featurecaption"><small>Selectiebewerker</small></span>
    </div>

    <div id="featureparel" class="col-md-2 featuretile">
        <img class="featureimage" src="@Href("~/Modules/Globalcaching/Media/excellent.png")" /><br /><br />
        <span class="featurecaption"><small>Parel van de Maand</small></span>
    </div>
</div>
    <script type="text/javascript">

        $("#featureccc").click(function () {
            window.location.assign('@Href("~/CCCHulp")');
        });

        $("#featuredonation").click(function () {
            window.location.assign('@Href("~/financiele-status-en-donaties")');
        });

        $("#featuresearch").click(function () {
            window.location.assign('@Href("~/ZoekenOpEigenschappen")');
        });

        $("#featureftf").click(function () {
            window.location.assign('@Href("~/FTFRanglijst")');
        });

        $("#featureselectiebewerker").click(function () {
            window.location.assign('@Href("~/Selectiebewerker")');
        });

        $("#featureparel").click(function () {
            window.location.assign('@Href("~/Parels")');
        });

    </script>
