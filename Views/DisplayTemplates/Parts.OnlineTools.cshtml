    <div class="tab-pane fade" id="woordwaarde">
        <div class="form-group">
            <div class="col-sm-11">
                <textarea id="woordwaardeInput" rows="7" class="form-control" placeholder="de tekst die je wilt omzetten"></textarea>
            </div>
            <div class="col-sm-3">
                <button class="btn btn-primary" type="button" id="woordwaardeButton">Omzetten</button>
            </div>
            <div class="col-sm-11">
                <textarea id="woordwaardeResult" rows="7" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="ASCII">
        <div class="form-group">
            <div class="col-sm-11">
                <textarea id="asciiInput" rows="7" class="form-control" placeholder="de tekst die je wilt omzetten"></textarea>
            </div>
            <div class="col-sm-3">
                <button class="btn btn-primary" type="button" id="asciiButton">Omzetten</button>
